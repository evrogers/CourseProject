@model InsuranceCompany.Models.Staffs

@{
    ViewData["Title"] = "Edit";
}

<h2>Изменить</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StaffName" class="control-label">ФИО Сотрудника</label>
                <input asp-for="StaffName" class="form-control" />
                <span asp-validation-for="StaffName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffPost" class="control-label">Должность</label>
                <input asp-for="StaffPost" class="form-control" />
                <span asp-validation-for="StaffPost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffExperience" class="control-label">Стаж</label>
                <input asp-for="StaffExperience" class="form-control" />
                <span asp-validation-for="StaffExperience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

