@model InsuranceCompany.Models.PolicyTypes

@{
    ViewData["Title"] = "Edit";
}

<h2>Изменить</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PolicyName" class="control-label">Наименование</label>
                <input asp-for="PolicyName" class="form-control" />
                <span asp-validation-for="PolicyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PolicyDescription" class="control-label">Описание</label>
                <input asp-for="PolicyDescription" class="form-control" />
                <span asp-validation-for="PolicyDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PolicyCondition" class="control-label">Условие</label>
                <input asp-for="PolicyCondition" class="form-control" />
                <span asp-validation-for="PolicyCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

