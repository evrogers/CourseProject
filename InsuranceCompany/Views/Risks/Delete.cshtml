@model InsuranceCompany.Models.Risks

@{
    ViewData["Title"] = "Delete";
}

<h2>Удалить</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Наименование
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RiskName)
        </dd>
        <dt>
            Описание
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RiskDescription)
        </dd>
        <dt>
            Средняя вероятность
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AverageProbability)
        </dd>
        <dt>
            Вид полиса
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Type.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        <a asp-action="Index">Вернуться назад</a>
    </form>
</div>
