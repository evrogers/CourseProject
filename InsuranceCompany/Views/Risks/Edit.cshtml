@model InsuranceCompany.Models.Risks

@{
    ViewData["Title"] = "Edit";
}

<h2>Изменить</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RiskName" class="control-label">Наименование</label>
                <input asp-for="RiskName" class="form-control" />
                <span asp-validation-for="RiskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RiskDescription" class="control-label">Описание</label>
                <input asp-for="RiskDescription" class="form-control" />
                <span asp-validation-for="RiskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AverageProbability" class="control-label">Средняя вероятность</label>
                <input asp-for="AverageProbability" class="form-control" />
                <span asp-validation-for="AverageProbability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeId" class="control-label">Вид полиса</label>
                <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернутся назад</a>
</div>

