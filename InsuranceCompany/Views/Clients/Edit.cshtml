@model InsuranceCompany.Models.Client

@{
    ViewData["Title"] = "Edit";
}

<h2>Изменить</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientName" class="control-label">ФИО Клиента</label>
                <input asp-for="ClientName" class="form-control" />
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientDateBirth" class="control-label">Дата рождения</label>
                <input asp-for="ClientDateBirth" class="form-control" />
                <span asp-validation-for="ClientDateBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientSex" class="control-label">Пол</label>
                <input asp-for="ClientSex" class="form-control" />
                <span asp-validation-for="ClientSex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientAddress" class="control-label">Адрес</label>
                <input asp-for="ClientAddress" class="form-control" />
                <span asp-validation-for="ClientAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientPhone" class="control-label">Телефон</label>
                <input asp-for="ClientPhone" class="form-control" />
                <span asp-validation-for="ClientPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientPassport" class="control-label">Паспорт</label>
                <input asp-for="ClientPassport" class="form-control" />
                <span asp-validation-for="ClientPassport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupId" class="control-label">Группа</label>
                <select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

